{% extends "layout_admin.html.twig" %}
{% set item = "produits" %}
{% set sousItem = "liste" %}
{% block title %}Produits{% endblock %}


{% block breadcrumb %}
    <li><a href="{{ path('app_admin_index') }}">Administration</a></li>
    <li class="active">Produits</li>
    {% endblock %}

{% block stylesheet %}
    <link rel="stylesheet" type="text/css" href="{{ asset('css/bootstrap-multiselect.css') }}" />
    <link rel="stylesheet" type="text/css" href="{{ asset('css/dataTables.bootstrap.min.css') }}" />
{% endblock %}

{% block contenu %}

    <div class="row">
        <div class="col-md-12">
            <legend><i class="fa fa-list" aria-hidden="true"></i> Liste Produits</legend>
            <div class="table-responsive">
                <table id="table-produit" class="table table-striped table-bordered" cellspacing="0" width="100%">
                    <thead>
                        <tr>
                            <th><input style="width: 100%;" type="text" class="filter form-control input-sm" id="reference" /></th>
                            <th><input style="width: 100%;" type="text" class="filter form-control input-sm" id="titre" /></th>
                            <th><input style="width: 100%;" type="text" class="filter form-control input-sm numerique" id="prix" /></th>
                            <th><input style="width: 100%;" type="text" class="filter form-control input-sm entier" id="stock" /></th>
                            <th>
                                <select style="width: 100%;" multiple="true" id="categorieSlugs" class="filter form-control input-sm multi">
                                    {% for categorie in categories %}
                                        <option value="{{ categorie.slug }}">{{ categorie.libelle }}</option>
                                    {% endfor %}
                                </select>
                            </th>
                            <th>
                                <select style="width: 100%;" multiple="true" id="genreIds" class="filter form-control input-sm multi">
                                    {% for genre in genres %}
                                        <option value="{{ genre.id }}">{{ genre.libelle }}</option>
                                    {% endfor %}
                                </select>
                            </th>
                            <th></th>
                            <th>
                                <select style="width: 100%;" id="enSolde" class="filter form-control input-sm">
                                    <option value="">---</option>
                                    <option value="1">Oui</option>
                                    <option value="0">Non</option>
                                </select>
                            </th>
                            <th>
                                <select style="width: 100%;" id="occasion" class="filter form-control input-sm">
                                    <option value="">---</option>
                                    <option value="1">Oui</option>
                                    <option value="0">Non</option>
                                </select>
                            </th>
                            <th>
                                <select style="width: 100%;" id="isBestProduct" class="filter form-control input-sm">
                                    <option value="">---</option>
                                    <option value="1">Oui</option>
                                    <option value="0">Non</option>
                                </select>
                            </th>
                            <th></th>
                        </tr>
                        <tr>
                            <th>Référence</th>
                            <th>Titre</th>
                            <th>Prix</th>
                            <th>Stock</th>
                            <th>Catégorie</th>
                            <th>Genres</th>
                            <th>Nouveau</th>
                            <th>En solde</th>
                            <th>Occasion</th>
                            <th>Meilleur</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody></tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascript %}
    <script type="text/javascript" src="{{ asset('js/bootstrap-multiselect.js') }}"></script>
    <script type="text/javascript" src="{{ asset('js/jquery.dataTables.min.js') }}"></script>
    <script type="text/javascript" src="{{ asset('js/dataTables.bootstrap.min.js') }}"></script>

    <script type="text/javascript" src="{{ asset('js/produits.js') }}"></script>
{% endblock %}