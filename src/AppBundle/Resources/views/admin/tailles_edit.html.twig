{% extends "layout_admin.html.twig" %}
{% set item = "variations" %}
{% set sousItem = "taille" %}
{% block title %}Taille : {{ taille.nom }}{% endblock %}


{% block breadcrumb %}
    <li><a href="{{ path('app_admin_index') }}">Administration</a></li>
    <li><a href="{{ path('app_admin_tailles') }}">Tailles</a></li>
    <li class="active">{{ taille.nom }}</li>
    {% endblock %}

{% block contenu %}

    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            <div class="well well-ws-inc">
                <legend><i class="fa fa-pencil-square-o" aria-hidden="true"></i> Modifier Taille ({{ taille.nom }})</legend>
                {{ form_start(formTaille,{'attr':{'class':'form-horizontal','method':'POST','data-parsley-validate':''}}) }}
                {{ form_errors(formTaille) }}

                <div class="form-group">
                    {{ form_label(formTaille.nom, "Nom : ", {'label_attr': {'class': 'col-sm-3 control-label'}}) }}
                    <div class="col-sm-9">
                        {{ form_widget(formTaille.nom, {'attr': {'class': 'form-control'}}) }}
                    </div>
                </div>
                <div class="form-group">
                    {{ form_label(formTaille.code, "Code : ", {'label_attr': {'class': 'col-sm-3 control-label'}}) }}
                    <div class="col-sm-9">
                        {{ form_widget(formTaille.code, {'attr': {'class': 'form-control'}}) }}
                    </div>
                </div>
                <div class="form-group">
                    <button class="btn btn-primary btn-sm pull-right" type="submit"><i class="fa fa-floppy-o" aria-hidden="true"></i> Enregistrer</button>
                </div>
                {{ form_rest(formTaille) }}
                {{ form_end(formTaille) }}
            </div>
        </div>
    </div>
{% endblock %}

