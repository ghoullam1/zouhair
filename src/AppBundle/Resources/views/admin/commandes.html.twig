{% extends "layout_admin.html.twig" %}
{% set item = "commandes" %}
{% set sousItem = "liste" %}
{% block title %}Commandes{% endblock %}


{% block breadcrumb %}
    <li><a href="{{ path('app_admin_index') }}">Administration</a></li>
    <li class="active">Commandes</li>
    {% endblock %}

{% block stylesheet %}
    <link rel="stylesheet" type="text/css" href="{{ asset('css/bootstrap-multiselect.css') }}" />
    <link rel="stylesheet" type="text/css" href="{{ asset('css/dataTables.bootstrap.min.css') }}" />
    <link rel="stylesheet" media="all" type="text/css" href="{{ asset('css/jquery-ui-timepicker-addon.min.css') }}" />
{% endblock %}

{% block contenu %}

    <div class="row">
        <div class="col-md-12">
            <legend><i class="fa fa-list" aria-hidden="true"></i> Liste Commandes</legend>
            <div class="table-responsive">
                <table id="table-commande" class="table table-striped table-bordered" cellspacing="0" width="100%">
                    <thead>
                        <tr>
                            <th><input style="width: 100%;" type="text" class="filter form-control input-sm" id="reference" /></th>
                            <th><input style="width: 100%;" type="text" class="filter form-control input-sm" id="client" /></th>
                            <th><input style="width: 100%;" type="text" class="filter form-control input-sm numerique" id="total" /></th>
                            <th><input style="width: 100%;" type="text" class="filter form-control input-sm numerique" id="fraisLivraison" /></th>
                            <th><input style="width: 100%;" type="text" class="filter form-control input-sm date" id="dateCommande" /></th>
                            <th>
                                <select style="width: 100%;" multiple="true" id="modesLivraisonIds" class="filter form-control input-sm multi">
                                    {% for ml in modesLivraison %}
                                        <option value="{{ ml.id }}">{{ ml.libelle }}</option>
                                    {% endfor %}
                                </select>
                            </th>
                            <th><input style="width: 100%;" type="text" class="filter form-control input-sm numerique" id="remise" /></th>
                            <th>
                                <select style="width: 100%;" multiple="true" id="statutCommandeIds" class="filter form-control input-sm multi">
                                    {% for statut in statutsCommande %}
                                        <option value="{{ statut.id }}">{{ statut.libelle }}</option>
                                    {% endfor %}
                                </select>
                            </th>
                            <th></th>
                        </tr>
                        <tr>
                            <th>Référence</th>
                            <th>Client</th>
                            <th>Total</th>
                            <th>Frais livraison</th>
                            <th>Date commande</th>
                            <th>Mode Livraison</th>
                            <th>Remise</th>
                            <th>Statut</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody></tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascript %}
    <script type="text/javascript" src="{{ asset('js/bootstrap-multiselect.js') }}"></script>
    <script type="text/javascript" src="{{ asset('js/jquery.dataTables.min.js') }}"></script>
    <script type="text/javascript" src="{{ asset('js/dataTables.bootstrap.min.js') }}"></script>
    <script type="text/javascript" src="{{ asset('js/jquery-ui-timepicker-addon.min.js') }}"></script>
    <script type="text/javascript" src="{{ asset('js/jquery-ui-timepicker-fr.js') }}"></script>
    <script type="text/javascript" src="{{ asset('js/jquery-ui-sliderAccess.js') }}"></script>
    <script type="text/javascript" src="{{ asset('js/commandes.js') }}"></script>
{% endblock %}