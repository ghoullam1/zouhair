                            <th><input style="width: 100%;" type="text" class="filter form-control input-sm entier" id="id" /></th>
                            <th><input style="width: 100%;" type="text" class="filter form-control input-sm" id="nom" /></th>
                            <th><input style="width: 100%;" type="text" class="filter form-control input-sm" id="prenom" /></th>
                            <th><input style="width: 100%;" type="text" class="filter form-control input-sm" id="email" /></th>
                            <th><input style="width: 100%;" type="text" class="filter form-control input-sm numerique" id="gsm" /></th>
                            <th><input style="width: 100%;" type="text" class="filter form-control input-sm date" id="dateInscription" /></th>
                            <th>
                                <select style="width: 100%;" multiple="true" id="villeIds" class="filter form-control input-sm multi">
                                    {% for ville in villes %}
                                        <option value="{{ ville.id }}">{{ ville.nom }}</option>
                                    {% endfor %}
                                </select>
