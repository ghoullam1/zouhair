{% extends "layout_admin.html.twig" %}
{% set item = "villes_ml" %}
{% set sousItem = "mode_livraison" %}
{% block title %}Mode de livraison : {{ mode.libelle }}{% endblock %}


{% block breadcrumb %}
    <li><a href="{{ path('app_admin_index') }}">Administration</a></li>
    <li><a href="{{ path('app_admin_modes_livraison') }}">Modes Livraion</a></li>
    <li class="active">{{ mode.libelle }}</li>
    {% endblock %}

{% block contenu %}

    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            <div class="well well-ws-inc">
                <legend><i class="fa fa-pencil-square-o" aria-hidden="true"></i> Modifier Mode Livaison ({{ mode.libelle }})</legend>
                {{ form_start(formMode,{'attr':{'class':'form-horizontal','method':'POST','data-parsley-validate':''}}) }}
                {{ form_errors(formMode) }}

                <div class="form-group">
                    {{ form_label(formMode.libelle, "Libell√© : ", {'label_attr': {'class': 'col-sm-3 control-label'}}) }}
                    <div class="col-sm-9">
                        {{ form_widget(formMode.libelle, {'attr': {'class': 'form-control'}}) }}
                    </div>
                </div>

                <div class="form-group">
                    {{ form_label(formMode.fraisLivraison, "Frais : ", {'label_attr': {'class': 'col-sm-3 control-label'}}) }}
                    <div class="col-sm-9">
                        {{ form_widget(formMode.fraisLivraison, {'attr': {'class': 'form-control numerique'}}) }}
                    </div>
                </div>

                <div class="form-group">
                    {{ form_label(formMode.ville, "Ville : ", {'label_attr': {'class': 'col-sm-3 control-label'}}) }}
                    <div class="col-sm-9">
                        {{ form_widget(formMode.ville, {'attr': {'class': 'form-control'}}) }}
                    </div>
                </div>

                <div class="form-group">
                    <button class="btn btn-primary btn-sm pull-right" type="submit"><i class="fa fa-floppy-o" aria-hidden="true"></i> Enregistrer</button>
                </div>
                {{ form_rest(formMode) }}
                {{ form_end(formMode) }}
            </div>
        </div>
    </div>
{% endblock %}

