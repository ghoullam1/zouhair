{% extends "layout_admin.html.twig" %}
{% set item = "templates" %}

{% block title %}Templates Email : {{ template.libelle }}{% endblock %}

{% block breadcrumb %}
    <li><a href="{{ path('app_admin_index') }}">Administration</a></li>
    <li><a href="{{ path('app_admin_templates') }}">Templates Email</a></li>
    <li class="active">{{ template.libelle }}</li>
    {% endblock %}

{% block contenu %}

    <div class="row">
        <div class="col-md-12">
            <div class="well well-ws-inc">
                <legend><i class="fa fa-pencil-square-o" aria-hidden="true"></i> Modifier Template</legend>
                {{ form_start(formTemplate,{'attr':{'class':'form-horizontal','method':'POST','data-parsley-validate':''}}) }}
                {{ form_errors(formTemplate) }}

                <div class="form-group">
                    {{ form_label(formTemplate.libelle, "Libell√© : ", {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
                    <div class="col-sm-10">
                        {{ form_widget(formTemplate.libelle, {'attr': {'class': 'form-control'}}) }}
                    </div>
                </div>


                <div class="form-group">
                    {{ form_label(formTemplate.objet, "Objet : ", {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
                    <div class="col-sm-10">
                        {{ form_widget(formTemplate.objet, {'attr': {'class': 'form-control'}}) }}
                    </div>
                </div>


                <div class="form-group">
                    {{ form_label(formTemplate.contenu, "Contenu : ", {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
                    <div class="col-sm-10">
                        {{ form_widget(formTemplate.contenu, {'attr': {'class': 'form-control'}}) }}
                    </div>
                </div>

                <div class="form-group">
                    <button class="btn btn-primary btn-sm pull-right" type="submit"><i class="fa fa-floppy-o" aria-hidden="true"></i> Enregistrer</button>
                </div>
                {{ form_rest(formTemplate) }}
                {{ form_end(formTemplate) }}
            </div>
        </div>
    </div>
{% endblock %}

{% block javascript %}
    <script type="text/javascript" src="{{ asset('js/tinymce/tinymce.min.js') }}"></script>
    <script type="text/javascript" src="{{ asset('js/templates.js') }}"></script>
{% endblock %}